@using PierreBakeryVendors.Models;

<h4>All orders belonging to this vendor:</h4>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].vendorId/orders/@order.orderId'>@order.orderTitle</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].vendorId/orders/new'>Add an order to this vendor</a></p>
<p><a href='/vendors'>Return to vendors portal</a></p>
<p><a href='/'>Home</a></p>